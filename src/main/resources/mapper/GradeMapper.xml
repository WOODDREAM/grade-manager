<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dfire.grade.manager.mapper.GradeMapper">
    <resultMap id="gradeMapper" type="com.dfire.grade.manager.bean.Grade">
        <id column="gra_id" property="gradeId" jdbcType="VARCHAR"/>
        <result column="stu_id" property="studentId" jdbcType="VARCHAR"/>
        <result column="answer_id" property="answerId" jdbcType="VARCHAR"/>
        <result column="cla_id" property="classId" jdbcType="VARCHAR"/>
        <result column="tea_id" property="teacherId" jdbcType="VARCHAR"/>
        <result column="grade" property="grade" jdbcType="DOUBLE"/>
        <result column="job_id" property="jobId" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="DATE"/>
    </resultMap>
    <sql id="selectColumn">
        SELECT gra_id,stu_id,cla_id,tea_id,grade,job_id,answer_id
        FROM grade
    </sql>
    <insert id="insertGrade" parameterType="com.dfire.grade.manager.bean.Grade">
        INSERT INTO grade(gra_id,stu_id,cla_id,tea_id,grade,job_id,type,create_time,valid,answer_id)
        VALUES (
        #{gradeId},
        #{studentId},
        #{classId},
        #{teacherId},
        #{grade},
        #{jobId},
        #{createTime},
        #{valid},
        #{answerId}
        )
    </insert>
    <select id="selectGradeByCondition" parameterType="com.dfire.grade.manager.bean.Grade" resultMap="gradeMapper">
        <include refid="selectColumn"/>
        <where>
            valid = '1'
            <if test="gradeId !=null">AND gra_id = #{gradeId}</if>
            <if test="studentId !=null">AND stu_id = #{studentId}</if>
            <if test="teacherId !=null">AND tea_id = #{teacherId}</if>
            <if test="classId !=null">AND cla_id = #{classId}</if>
            <if test="jobId !=null">AND job_id = #{jobId}</if>
            <if test="answer !=null">AND is_need_answer = #{answer}</if>
            <if test="endTime !=null">AND end_time = #{createTime}</if>
        </where>
    </select>
    <insert id="insertBatch" parameterType="java.util.List">
        INSERT INTO grade(gra_id,stu_id,cla_id,tea_id,grade,job_id,create_time,valid,answer_id)
        VALUES
        <foreach collection="list" item="grade" separator=",">
            (
            #{gradeId},
            #{studentId},
            #{classId},
            #{teacherId},
            #{grade},
            #{jobId},
            #{createTime},
            #{valid},
            #{answerId}
            )
        </foreach>
    </insert>
</mapper>