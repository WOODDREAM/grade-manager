<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dfire.grade.manager.mapper.ClassStartMapper">
    <resultMap id="ClassStartMapper" type="com.dfire.grade.manager.bean.ClassStart">
        <result column="class_id" property="classId" jdbcType="VARCHAR"/>
        <result column="class_no" property="classNo" jdbcType="VARCHAR"/>
        <result column="teacher_id" property="teacherId" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="DATE"/>
        <result column="class_name" property="className" jdbcType="VARCHAR"/>
    </resultMap>
    <insert id="insertStart" parameterType="com.dfire.grade.manager.bean.ClassStart">
        INSERT INTO class_start (class_id,class_no,teacher_id,create_time,class_name)
        VALUES (
        #{classId},
        #{classNo},
        #{teacherId},
        #{createTime},
        #{className}
        )
    </insert>
    <sql id="selectColumn">
        SELECT class_id,class_no,teacher_id,class_name,create_time
        FROM class_start
    </sql>
    <select id="selectClassByTeacherId" parameterType="String" resultMap="ClassStartMapper">
        <include refid="selectColumn"/>
        WHERE teacher_id = #{teacherId}
    </select>
    <delete id="deleteByTime" parameterType="java.util.Date">
        DELETE FROM class_start WHERE create_time &lt; #{date}
    </delete>
    <delete id="deleteByClassId" parameterType="String">
        DELETE FROM class_start WHERE class_id= #{classId}
    </delete>
    <delete id="deleteByClassNo" parameterType="String">
        DELETE FROM class_start WHERE class_no= #{classNo}
    </delete>

    <select id="selectBatch" parameterType="java.util.List" resultMap="ClassStartMapper">
        <include refid="selectColumn"/>
        <where>
            class_id in
            <foreach collection="classIds" item="item" index="index"
                     open="(" separator="," close=")">#{item}
            </foreach>
        </where>
    </select>
    <select id="selectByDate" parameterType="java.util.Date" resultMap="ClassStartMapper">
        <include refid="selectColumn"/>
        WHERE create_time &lt; #{date}
    </select>
</mapper>