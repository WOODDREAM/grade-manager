<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dfire.grade.manager.mapper.EmailMapper">
    <resultMap id="EmailMapper" type="com.dfire.grade.manager.bean.Email">
        <id column="id" property="id" jdbcType="VARCHAR"/>
        <result column="student_id" property="studentId" jdbcType="VARCHAR"/>
        <result column="body" property="body" jdbcType="VARCHAR"/>
        <result column="subject" property="subject" jdbcType="VARCHAR"/>
        <result column="file_name" property="fileName" jdbcType="VARCHAR"/>
        <result column="teacher_id" property="teacherId" jdbcType="VARCHAR"/>
        <result column="address" property="address" jdbcType="VARCHAR"/>
        <result column="valid" property="valid" jdbcType="SMALLINT"/>
        <result column="readed" property="readed" jdbcType="SMALLINT"/>
        <result column="create_time" property="createTime" jdbcType="SMALLINT"/>
        <result column="type" property="type" jdbcType="SMALLINT"/>
        <result column="important" property="important" jdbcType="SMALLINT"/>
    </resultMap>
    <sql id="selectConlumn">
        SELECT id,body,subject,teacher_id,student_id,readed,create_time,address,type,important,file_name FROM email
    </sql>
    <insert id="insertEmail" parameterType="com.dfire.grade.manager.bean.Email">
        INSERT INTO email (id,body,subject,teacher_id,student_id,readed,valid,create_time,address,type,important,file_name)
        VALUES (
        #{id},
        #{body},
        #{subject},
        #{teacherId},
        #{studentId},
        #{readed},
        #{valid},
        #{createTime},
        #{address},
        #{type},
        #{important},
        #{fileName}
        )
    </insert>
    <update id="updateReaded" parameterType="String">
        UPDATE email
        SET readed=1
        WHERE id=#{id}
        AND valid=1
    </update>
    <select id="selectByCondition" parameterType="com.dfire.grade.manager.bean.Email" resultMap="EmailMapper">
        <include refid="selectConlumn"/>
        <where>
            <if test="id !=null">AND id=#{id}</if>
            <if test="teacherId != null">AND teacher_id = #{teacherId}</if>
            <if test="studentId != null">AND student_id = #{studentId}</if>
            <if test="important != null">AND important = #{important}</if>
            <if test="valid != null">AND valid = #{valid}</if>
        </where>
    </select>

    <delete id="deleteById" parameterType="String">
        UPDATE email
        set valid = 0
        WHERE id= #{id}
    </delete>
    <select id="selectUnreadCount" parameterType="com.dfire.grade.manager.bean.Email" resultType="int">
        SELECT COUNT(*)
        FROM email
        WHERE valid =1
        AND readed = 0
        <if test="teacherId != null">AND teacher_id = #{teacherId}</if>
        <if test="studentId != null">AND student_id = #{studentId}</if>
    </select>
</mapper>