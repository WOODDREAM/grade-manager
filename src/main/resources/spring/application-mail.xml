<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="mailConfiguration" class="com.dfire.grade.manager.configuration.MailConfiguration">
        <property name="formHost" value="${mailHost}"/>
        <property name="from" value="${mailFrom}"/>
        <property name="mailAuth" value="${mailAuth}"/>
        <property name="mailPort" value="${mailPort}"/>
        <property name="mailSmptHost" value="${mailSmptHost}"/>
        <property name="mailSmptAuth" value="${mailSmptAuth}"/>
        <property name="mailCertificate" value="${mailQQCertificate}"/>
        <property name="mailImapToken" value="${mailImapToken}"/>
        <property name="mailPop3Token" value="${mailPop3Token}"/>
    </bean>
</beans>