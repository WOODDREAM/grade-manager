<?xml version="1.0" encoding="UTF-8"?>
<configuration>
       <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
              <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
                     <level>DEBUG</level>
              </filter>
              <immediateFlush>false</immediateFlush>
              <layout class="ch.qos.logback.classic.PatternLayout">
                     <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %X
                            %logger{32}.%M:%L - %msg%n
                     </pattern>
              </layout>
       </appender>

       <appender name="FILE"
                 class="ch.qos.logback.core.rolling.RollingFileAppender">
              <file>C:\\Users\\liaoting/logs/consolelogs/rocketmq-console.log</file>
              <append>true</append>
              <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                     <fileNamePattern>C:\\Users\\liaoting/logs/consolelogs/rocketmq-console-%d{yyyy-MM-dd}.%i.log
                     </fileNamePattern>
                     <timeBasedFileNamingAndTriggeringPolicy
                             class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                            <maxFileSize>104857600</maxFileSize>
                     </timeBasedFileNamingAndTriggeringPolicy>
                     <MaxHistory>10</MaxHistory>
              </rollingPolicy>
              <encoder>
                     <pattern>%d{yyyy-MM-dd HH:mm:ss,GMT+8} %-5p [%t] - %m%n
                     </pattern>
                     <charset class="java.nio.charset.Charset">UTF-8</charset>
              </encoder>
       </appender>

       <root level="DEBUG">
              <appender-ref ref="STDOUT" />
              <appender-ref ref="FILE" />
       </root>

</configuration>