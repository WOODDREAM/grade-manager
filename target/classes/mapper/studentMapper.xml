<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dfire.grade.manager.mapper.StudentMapper">
    <resultMap id="studentMap" type="com.dfire.grade.manager.bean.Student">
        <id column="stu_name" property="name" jdbcType="VARCHAR"/>
        <result column="email" property="email" jdbcType="VARCHAR"/>
    </resultMap>
    <select id="queryStudentById" resultMap="studentMap" parameterType="String">
              select stu_name,email
              from students
              WHERE id=#{id}
       </select>

    <insert id="insertStudent" parameterType="com.dfire.grade.manager.bean.Student">
              INSERT INTO students (stu_name,email)
              VALUES (
              #{name},
              #{email}
              )
       </insert>
</mapper>